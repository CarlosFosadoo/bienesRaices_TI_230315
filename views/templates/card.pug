div(class="bg-blue-900 shadow-xl shadow-blue-200 rounded-lg") 
    img(class="object-cover h-72 w-full rounded-t-lg" src=`/uploads/${propiedad.imagen}` alt=`imagen de la propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-5 bg-blue rounded-b-lg")
        h1(class="text-2xl font-extrabold text-blue-500")= propiedad.titulo
        p(class="text-sm text-blue-100") Habitaciones:  
            span(class="text-blue-500 font-bold")= propiedad.habitaciones
        p(class="text-sm text-blue-100") WC:  
            span(class="text-blue-500 font-bold")= propiedad.wc
        p(class="text-sm text-blue-100") Precio:  
            span(class="text-blue-500 font-bold")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-white hover:bg-blue-800 w-full text-center block font-bold hover:text-white text-blue-500 p-2 uppercase rounded") Ver Propiedad
