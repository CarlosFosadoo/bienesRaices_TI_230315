extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-blue-500 Bienes 
            span.font-normal Raíces  
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password" novalidate) 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-blue-500.mb-3.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-blue-300.rounded-md.placeholder-blue-400(placeholder="Escribe tu email" type="email" name="email") 
                    div.flex.items-center.justify-between 
                        a.text-blue-500.text-xs(href="/auth/registro" class="hover:underline decoration2 hover:decoration-blue") ¿No tienes cuenta? Crea una
                        a.text-blue-500.text-xs(href="/auth/login" class="hover:underline decoration2 hover:decoration-blue") ¿Ya tienes cuenta? Inicia Sesión

                    input(class="w-full bg-white hover:bg-blue-500 hover:text-white shadow-white text-blue-900 font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Enviar instrucciones")   
