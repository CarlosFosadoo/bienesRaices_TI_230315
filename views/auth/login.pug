extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-blue-500 Bienes 
            span.font-normal Raíces  
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div.max-w-md.mx-auto.my-10
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow-lg.rounded-md
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-blue-300.rounded-md.placeholder-blue-400(placeholder="Escribe tu email" type="email" name="email")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-blue-300.rounded-md.placeholder-blue-400(placeholder="Escribe tu password" type="password" name="password")

                    div.flex.items-center.justify-between
                        a.text-blue-500.text-xs(href="/auth/registro" class="hover:underline decoration-2 hover:decoration-") ¿No tienes cuenta? Crea una
                        a.text-blue-500.text-xs(href="/auth/olvide-password" class="hover:underline decoration-2 hover:decoration-blue") Olvidé mi Password

                    input(class="w-full bg-white hover:bg-blue-500 hover:text-white shadow-white text-blue-900 font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Iniciar Sesión")
